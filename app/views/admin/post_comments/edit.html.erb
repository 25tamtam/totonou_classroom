<h2>アドバイスを編集</h2>

<%= form_with(model: [@comment.post, @comment], url: edit_admin_post_post_comment_path(@comment.post, @comment), method: :patch) do |form| %>
  <div class="form-group">
    <%= form.text_area :body, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit "更新", class: "btn btn-magenta" %>
  </div>
<% end %>
